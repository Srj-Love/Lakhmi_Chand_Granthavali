<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBAC6"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lkh"
        tools:ignore="ContentDescription">

    </ImageView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="सूर्यकवि पंडित लखमीचन्द ग्रन्थावली.....सूर्यकवि पंडित लखमीचन्द ग्रन्थावली ..... सूर्यकवि पंडित लखमीचन्द ग्रन्थावली... सूर्यकवि पंडित लखमीचन्द ग्रन्थावली"
        android:textColor="#027c10"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/Button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="181dp"
        android:background="#d4ffff"
        android:drawableEnd="@drawable/ic_arrow_forward_blue_24dp"
        android:text="कवि परिचय"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="124dp"
        android:background="#cffff5"
        android:drawableEnd="@drawable/ic_arrow_forward_blue_24dp"
        android:text="सांग संग्रह"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/Button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="67dp"
        android:background="#cffff5"
        android:drawableEnd="@drawable/ic_arrow_forward_blue_24dp"
        android:text="हमारे बारे में"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_bkmrk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="67dp"
        android:background="#cffff5"
        android:drawableEnd="@drawable/ic_arrow_forward_blue_24dp"
        android:text="@string/bkmrk"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="8dp"
        android:background="#cffff5"
        android:drawableEnd="@drawable/ic_arrow_forward_blue_24dp"
        android:text="सम्पर्क करें"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />
</RelativeLayout>